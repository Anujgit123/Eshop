                        <li class="prev_btn">
                        <a href="#!"><i class="fal fa-angle-left"></i></a>
                        </li>
                        <li class="next_btn">
                        <a href="#!"><i class="fal fa-angle-right"></i></a>
                        </li>
                        </ul>
                        </div>*@
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
