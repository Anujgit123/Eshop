        .filter-summary-filter label {
            padding: 3px 8px;
            margin-left: 3px;
            border: 2px solid #e1e1e1;
            color: #636363;
            border-radius: 50px;
            cursor: pointer
        }

            .filter-summary-filter label:hover {
                border: 2px solid #8f8f8f;
            }

        .product-pic {
            position: relative;
        }

        .product_variable_option_section {
            position: absolute;
            bottom: 0;
            left: 0;
            background: #ffffff;
