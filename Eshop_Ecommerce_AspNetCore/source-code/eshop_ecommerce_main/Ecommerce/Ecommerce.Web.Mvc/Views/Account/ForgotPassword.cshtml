@model ForgotPasswordDto

@{
    Layout = LayoutPage.CleanLayout;
    ViewData["Title"] = "Forgot Password";
}

@section Styles{
<style>
    html,
    body {
        height: 100% !important;
    }

    body {
        display: -ms-flexbox;
        display: flex;
        -ms-flex-align: center;
        align-items: center;
        padding-top: 40px;
        padding-bottom: 40px;
        background-color: #f5f5f5;
    }

    .form-signin {
        width: 100%;
        max-width: 420px;
        padding: 15px 35px;
        margin: auto;
    }

        .form-signin img {
            max-height: 60px;
        }

    .el-radio > input[type="radio"] + .el-radio-style:before, .el-checkbox > input[type="checkbox"] + .el-checkbox-style:before, input, .input-group-text {
        background: #fff;
        border: 1px solid #e4e6ef;
    }
</style>
}


<div style="margin:0 auto;">
    <div class="text-center">
        <span class="d-block mb-2" style="font-size: 1.5em;font-weight: bolder; color: #0dcaf0;">Reset Password</span>
    </div>
    <div class="text-center" style="max-height: 400px">
        <img src="~/assets/svg/mobile-login-amico3.svg"  class="img-fluid" />
    </div>
    <form class="form-signin" asp-action="ForgotPassword" asp-controller="Account" method="post" class="validation-tooltip">
        <div class="help-block text-center mb-2">
            Enter your registered email and submit.
        </div>
        <div class="form-floating mb-2">
            <input type="text" class="form-control" asp-for="Email" autofocus="" placeholder="Email Address">
            <label for="UserName">Email Address</label>
            <span asp-validation-for="Email"></span>
        </div>

        <div class="d-grid gap-2">
            <button class="btn btn-primary text-uppercase" type="submit">Submit</button>
        </div>
        <div>
            <div asp-validation-summary="All" class="text-danger"></div>
        </div>
        <div class="text-center">
            <a href="/login">Go to login</a>
        </div>
    </form>

</div>