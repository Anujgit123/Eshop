@{
    ViewData["Title"] = "Customer Info";
    Layout = LayoutPage.AdminLayout;
    var customer = ViewData["CustomerInfo"] as CustomerProfileDto;
}

@section Styles{
    <style>
        .customer-card {
            background-image: url(~/assets/svg/mobile-login-amico3.svg);
        }

        @@media (min-width:767px) {
            .border-col-media {
                border-right: 1px solid #dee2e6 !important;
            }
        }

    </style>
}


    <div class="page-title-box">
        <h4 class="page-title">Customer Info</h4>
    </div>


    <div class="card mb-4 customer-card">
        <div class="card-header" style="background-color: #457FDC;">
            <div class="row text-white">
                <div class="col-md-6">
                    <div>
                        <h3 class="mb-3">@customer?.CustomerInfo?.FullName</h3>
                        <div>
                            <i class="fas fa-phone"></i> @customer?.CustomerInfo?.Phone<br />
                            <i class="fas fa-envelope"></i> @customer?.CustomerInfo?.Email
                        </div>
                    </div>
                </div>
                <div class="col-md-6 d-flex justify-content-end">
                    <div style="width: 100px" class="mb-2">
                        <img src="~/assets/svg/user.svg" />
                    </div>
                </div>
            </div>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-body">
                            <strong>Billing Address: </strong>@customer?.CustomerInfo?.BillingAddress<br />
                            <strong>Shipping Address: </strong>@customer?.CustomerInfo?.ShippingAddress
                        </div>
                    </div>
                    <div class="card">
                        <div class="card-body">
                            <div class="row d-flex justify-content-between">
                                <div class="col-md-3 my-2 text-center border-col-media">
                                    <h3 class="text-success">@customer?.TotalOrder</h3>
                                    <p>Total Order</p>
                                </div>
                                <div class="col-md-3 my-2 text-center border-col-media">
                                    <h3>@customer?.TotalOrderAmount</h3>
                                    <p>Total Order Amount</p>
                                </div>
                                <div class="col-md-3 my-2 text-center border-col-media">
                                    <h3>@customer?.TotalDeliveryCharge</h3>
                                    <p>Total Del. Charge</p>
                                </div>
                                <div class="col-md-3 my-2 text-center">
                                    <h3 class="text-primary">@customer?.TotalAmount</h3>
                                    <p>Total Amount</p>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-12 mt-4">
                    <h5>Order Info</h5>
                    <div class="table-responsive">
                        <table class="table">
                            <thead class="thead-light">
                            <tr>
                                <th class="all">Invoice No.</th>
                                <th>Current Status</th>
                                <th>Order Amount</th>
                                <th>Delivery Charge</th>
                                <th>Total</th>
                                <th class="all"></th>
                            </tr>
                            </thead>
                            <tbody>
                            @foreach (var item in customer?.Orders)
                            {
                                <tr>
                                    <td>@item.InvoiceNo</td>
                                    <td><span class="badge badge-soft-primary badge-md">@item.CurrentOrderStatus</span></td>
                                    <td>@item.OrderAmount</td>
                                    <td>@item.DeliveryCharge</td>
                                    <td>@(item.OrderAmount + item.DeliveryCharge ?? 0)</td>
                                    <td>
                                        <a class="btn btn-soft-primary btn-sm me-1" href="@Url.Action("Details", "Order")/@item.Id"><i class="fa fa-search"></i></a>
                                    </td>
                                </tr>
                            }
                            </tbody>
                        </table>
                    </div>
                </div>
            <div class="mt-3">
                <a asp-action="Index" class="btn btn-outline-secondary"><i class="fa fa-reply"></i> Back to List</a>
            </div>
        </div>
    </div>
</div>
