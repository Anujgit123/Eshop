@{
    GeneralConfigurationDto conGen = JsonSerializer.Deserialize<GeneralConfigurationDto>(K["GeneralConfiguration"]);
}

<footer class="footer_section">
    <div class="footer_widget_area">
        <div class="container">
            <div class="row">
                <div class="col col-lg-4 col-md-6 col-sm-6">
                    <div class="footer_widget footer_about">
                        <div class="brand_logo">
                            <a class="brand_link" href="index.html">
                                @if (conGen?.CompanyLogo != null)
                                {
                                    <img src="/@conGen.CompanyLogo" height="20" />
                                }
                                else
                                {
                                    <span style="font-weight: bolder; font-size: 1.8em; color: #051d43;">@conGen?.CompanyName</span>
                                }
                            </a>
                        </div>
                        <vc:footer-social-media></vc:footer-social-media>
                    </div>
                </div>

                <div class="col col-lg-2 col-md-3 col-sm-6">
                    <div class="footer_widget footer_useful_links">
                        <h3 class="footer_widget_title text-uppercase">Quick Links</h3>
                        <ul class="ul_li_block">
                            @*<li><a href="about.html">About Us</a></li>*@
                            <li><a asp-controller="ContactQuery" asp-action="Send">Contact Us</a></li>
                            
                            @if (User.Identity.IsAuthenticated)
                            {
                                <li><a href="/logout">Logout</a></li>
                            }
                            else
                            {
                                <li><a asp-controller="My" asp-action="Login">Login</a></li>
                                <li><a asp-controller="My" asp-action="Register">Register</a></li>
                            }
                        </ul>
                    </div>
                </div>

                <div class="col col-lg-2 col-md-3 col-sm-6">
                    <div class="footer_widget footer_useful_links">
                        <h3 class="footer_widget_title text-uppercase">Shopping</h3>
                        <ul class="ul_li_block">
                            @if (User.IsInRole(DefaultApplicationRoles.Customer))
                            {
                                <li><a asp-controller="My" asp-action="Index">My Account</a></li>
                            }
                            <li><a href="shop.html">Shop</a></li>
                            <li><a asp-controller="TrackOrder" asp-action="Index">Order Tracking</a></li>
                            <li><a asp-action="Index" asp-controller="Cart">My Cart</a></li>
                        </ul>
                    </div>
                </div>

                <div class="col col-lg-4 col-md-6 col-sm-6">
                    <div class="footer_widget footer_contact">
                        <h3 class="footer_widget_title text-uppercase">Contact Info</h3>
                        <p>
                            @conGen?.CompanyLocation
                        </p>
                        <div class="hotline_wrap">
                            <div class="footer_hotline">
                                <div class="item_icon">
                                    <i class="icofont-headphone-alt"></i>
                                </div>
                                <div class="item_content">
                                    <h4 class="item_title">Have any queries?</h4>
                                    <span class="hotline_number">@conGen?.CompanyContact</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="footer_bottom">
        <div class="container">
            <div class="row align-items-center">
                <div class="col col-md-6">
                    <p class="copyright_text">
                        ©2021 <a href="/">@conGen?.CompanyName</a>. All Rights Reserved.
                    </p>
                </div>

                @*<div class="col col-md-6">
                    <div class="payment_method">
                    <h4>Payment:</h4>
                    <img src="/themes/shop/images/payments_icon.png" alt="image_not_found">
                    </div>
                    </div>*@
            </div>
        </div>
    </div>
</footer>