@*@model CustomerLoginDto*@
@model LoginUserDto

@{
    ViewData["Title"] = "Login";
    Layout = LayoutPage.ShopLayout;
    AdvancedConfigurationDto conAdv = JsonSerializer.Deserialize<AdvancedConfigurationDto>(K["AdvancedConfiguration"]);
}

@section Styles{
    <style>
        input[type="text"],
        input[type="password"],
        input[type="email"],
        input[type="tel"], .checkout-section .nice-select,
        textarea, .text-area {
            width: 100%;
            border-radius: 0px;
            border: none;
            min-height: 50px;
            padding: .4rem 1rem;
            background: #F5F5F7;
        }

        .form-check-input {
            width: 1.5em;
            height: 1.5em;
            margin-top: 0.1em;
        }

        .form-check-label {
            margin-left: 6px;
        }
    </style>
}


    <!-- login_section-start
    ================================================== -->
    <section class="register_section section_space">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-6 col-md-8">
                    <div class="text-center">
                        <h2 class="mb-0">Login</h2>
                        <p>Login to your existing account.</p>
                    </div>
                    <div class="register_wrap">
                        <form class="row" asp-controller="My" asp-action="Login" method="post" asp-route-returnUrl="@ViewData["ReturnUrl"]">
                            <div class="col-12 mb-3">
                                <label asp-for="UserName" class="form-label">Username</label>
                                <input type="text" class="form-control" asp-for="UserName">
                                <span asp-validation-for="UserName"></span>
                            </div>
                            <div class="col-12 mb-3">
                                <label for="Password" class="form-label">Password</label>
                                <input class="form-control password-input" asp-for="Password" autocomplete="new-password">
                                <span asp-validation-for="Password"></span>
                            </div>
                            <div class="col-12 mb-3">
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" asp-for="RememberMe" style="cursor: pointer;">
                                    <label class="form-check-label" for="RememberMe" style="cursor: pointer;">Remember Me</label>
                                </div>
                                <span asp-validation-for="RememberMe"></span>
                            </div>

                            <div class="col-12 mb-2">
                                <button type="submit" class="btn btn-secondary">Login</button>
                            </div>
                            <div class="col-12">
                                <span class="d-block">Don't have any account? <a asp-controller="My" asp-action="Register" class="fw-bold">Register Now</a></span>
                            </div>
                        @if (conAdv?.ActiveResetPassword == true)
                        {
                            <div>
                                <a href="/forgotpassword">Forgot password?</a>
                            </div>
                        }

                        <div>
                            <div asp-validation-summary="All" class="text-danger"></div>
                        </div>
                    </form>
                </div>
                @*                <div class="text-center mt-1">
                <a href="/login" class="fw-bold">Admin Login</a>
                </div>*@
            </div>
        </div>
    </div>
</section>
<!-- login_section - end
================================================== -->
